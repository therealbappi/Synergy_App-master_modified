<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@drawable/backgrounddark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iete"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="80dp"
            android:foregroundGravity="center"
            android:src="@drawable/ietelogos" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="35dp"
            android:text="PRESENTS"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/synergy"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:foregroundGravity="center"
            android:src="@drawable/synergy" />


    </LinearLayout>

</RelativeLayout>